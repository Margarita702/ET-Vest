@using ET_Vest.Models.Enums
 @model ET_Vest.Data.ViewModels.PrintedEditionProviderViewModel

<h2>Редактиране на печатно издание</h2>
<form method="post" asp-action="Edit" asp-controller="PrintedEdition">

    <div class="form-group">
        <label asp-for="@Model.PrintedEdition.Title"></label>
        <input asp-for="@Model.PrintedEdition.Title" class="form-control" />
        <span asp-validation-for="@Model.PrintedEdition.Title" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="@Model.PrintedEdition.Category"></label>
        <select asp-for="@Model.PrintedEdition.Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control">
            <option value="">Изберете категория</option>
        </select>
        <span asp-validation-for="@Model.PrintedEdition.Category" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.PrintedEdition.Periodicity"></label>
        <select asp-for="@Model.PrintedEdition.Periodicity" asp-items="Html.GetEnumSelectList<Periodicity>()" class="form-control">
            <option value="">Изберете периодичност</option>
        </select>

    </div>

    <div class="form-group">
        <label asp-for="@Model.PrintedEdition.DeliveredUnitPrice"></label>
        <input asp-for="@Model.PrintedEdition.DeliveredUnitPrice" class="form-control" />
        <span asp-validation-for="@Model.PrintedEdition.DeliveredUnitPrice" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.PrintedEdition.SalePrice"></label>
        <input asp-for="@Model.PrintedEdition.SalePrice" class="form-control" />
        <span asp-validation-for="@Model.PrintedEdition.SalePrice" class="text-danger"></span>

    </div> 

    <div class="form-group">
        <input asp-for="@Model.PrintedEdition.PrintedEditionId" class="d-none" readonly />
        <input type="submit" value="Редактиране" class="btn btn-primary" asp-sction="Edit" />
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Add custom validation rule to accept decimal numbers
            $.validator.methods.number = function (value, element) {
                return this.optional(element) || !isNaN(parseFloat(value));
            }

            // Add or modify validation rules for specific fields
            $('#decimalField').rules('edit', {
                number: true,  // Require the input to be a number
                messages: {
                    number: "Моля, въведете валидна цена."
                }
            });
        });
    </script>
}


